<section id="y-single_info">
    <div class="y-single_info">
        <div class="container">
            <div class="row y-single_info_inner y-section_content">
                <div class="clearfix">
                    <div class="y-breadcrum clearfix wow fadeInDown" data-wow-delay=".9s">
                        <div class="col-lg-8 col-md-8 col-sm-7 col-xs-12 y-blog_info ">
                            <h3 class="y-heading">@Localizer["galeri"]</h3>
                        </div>

                    </div>
                </div>


            </div>
        </div>
    </div>
</section>

<div class="container gallery-container">



    <div class="tz-gallery">

        <div class="row" style="padding-bottom: 20px !important; margin-top: -80px !important;">




            @foreach (var resimGaleri2 in Model.OrderBy(x => x.Sira))
            {
            <div class="col-sm-6 col-md-3  galery_img">
                <a class="lightbox" href="@resimGaleri2.ResimYolu">
                    <img src="@resimGaleri2.ResimYolu" class="imghover" alt="Park">
                </a>


            </div>
                 }
       </div>
</div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/baguettebox.js/1.8.1/baguetteBox.min.js"></script>
<script>
    baguetteBox.run('.tz-gallery');
</script>
