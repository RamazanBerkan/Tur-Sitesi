@*Gezi-area*@


<div class="container my-5">


    <div class="solution">
        <div class="solution-area">
            <div class="container">
                <h2>
                    İhtiyacınıza en uygun <br />yolculuğu bulalım
                </h2>
            </div>



            <div class="container">

                @{ int k = 2; }

                @foreach (var urun in Model.Urunler.Take(3).OrderBy(x => x.UrunKategori.OlusturmaTarihi))
                {@if (k % 2 == 0)
                    {
                        <div class="row pt-5">
                            <div class="col-md-6" data-aos="fade-right" data-aos-offset="300" data-aos-easing="ease-in-sine">
                                <a asp-controller="Travel" asp-action="TravelDetay" asp-route-urunSeoUrl="@urun.SeoUrl">

                                    <img src="@Html.Raw(urun.Resim)" class="img-fluid mb-4  travel-img img-hov  zoom" />
                                </a>
                            </div>
                            <div class="col-md-6 d-flex align-items-center mb-4" data-aos="fade-left" data-aos-offset="300" data-aos-easing="ease-in-sine">
                                <div class="title-with-paragraph-solutions pl-3">
                                    <h3 class="pb-3">
                                        @Html.Raw(urun.UrunAdi)
                                    </h3>
                                    <p class="pb-3">

                                        @Html.Raw(urun.KisaAciklama)
                                    </p>
                                    @foreach (var i in urun.UrunResimGalerisi.Take(3))
                                    {
                                        <img src="@Html.Raw(i.ResimUrl)" class="img-fluid p-3  travel-small-img img-hov  zoom" />
                                    }
                                    @*<img src="~/images/homePage/aruba.png" class="img-fluid p-3" />
                                        <img src="~/images/homePage/extreme.png" class="img-fluid p-3" />*@
                                    <p>
                                        <a asp-controller="Travel" asp-action="TravelDetay" asp-route-urunSeoUrl="@urun.SeoUrl" class="read-more">
                                            <span>
                                                Seyahatı incele
                                            </span>
                                        </a>
                                    </p>
                                </div>



                            </div>
                        </div>

                    }
                @if (k % 2 == 1)
                {
                    <div class="row pt-5">
                        <div class="col-md-6 d-flex align-items-center mb-4" data-aos="fade-right" data-aos-offset="300" data-aos-easing="ease-in-sine">
                            <div class="title-with-paragraph-solutions" style=" ">
                                <h3 class="pb-3">

                                    @Html.Raw(urun.UrunAdi)
                                </h3>
                                <p class="pb-3">
                                    @Html.Raw(urun.KisaAciklama)
                                </p>
                                @foreach (var i in urun.UrunResimGalerisi)
                                {
                                    <img src="@Html.Raw(i.ResimUrl)" class="img-fluid p-3  travel-small-img img-hov  zoom" />
                                }
                                <p>

                                    <a asp-controller="Travel" asp-action="TravelDetay" asp-route-urunSeoUrl="@urun.SeoUrl" class="read-more">
                                        <span>
                                            Seyahatı incele
                                        </span>
                                    </a>
                                </p>
                            </div>
                        </div>
                        <div class="col-md-6" data-aos="fade-left" data-aos-offset="300" data-aos-easing="ease-in-sine">
                            <a asp-controller="Travel" asp-action="TravelDetay" asp-route-urunSeoUrl="@urun.SeoUrl">

                                <img src="@Html.Raw(urun.Resim)" class="img-fluid mb-4  travel-img img-hov  zoom" />
                            </a>
                        </div>
                    </div>



                }

                k++;

            }





            </div>
        </div>
    </div>

</div>
@*home page banner*@
<div class="home-banner">
    <img src="@Html.Raw(Model.BannerResim.ResimUrl)" class="w-100 h-auto site-banner aboutUs-Banner-img" />
    <div class="centered" data-aos="zoom-in-up" data-aos-duration="3000">

        <p class="text-white alt-banner-yazi">
            @Html.Raw(ViewBag.Hakkimizda)
        </p>
        <a asp-controller="Iletisim" asp-action="iletisim" class="read-more">
            <span>
                İletişime Geç
            </span>
        </a>
    </div>
</div>


@*blogs*@

<div class="home-blogs">
    <div class="container pt-5">
        <div class="row">
            @foreach (var blog in Model.SonBloglar.Take(3))
            {
                <div class="col-md-4 mb-5">
                    <div class="card h-100">
                        <img class="card-img-top blog-img-card" src="@blog.Resim" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">@blog.Baslik</h5>
                            <p class="card-text">
                                @blog.KisaAciklama
                            </p>
                        </div>
                        <div class="card-footer">
                            <a asp-controller="Bloglar" asp-action="BlogDetayi" asp-route-blogId="@blog.Id" asp-route-seoUrl="@blog.Baslik.FriendlyUrl()" class="read-more">
                                <span>
                                    Devamı
                                </span>
                            </a>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>
