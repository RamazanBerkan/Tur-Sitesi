@model Sorular_RES
@{
    ViewData["Title"] = "SorularSayfasiDuzenle";
}

<div class="m-content">
    <div class="container-fluid" style="padding-top:20px">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="m-portlet">
                    <div class="m-portlet__head">
                        <div class="m-portlet__head-caption">
                            <div class="m-portlet__head-title">
                                <h3 class="m-portlet__head-text">
                                    Sıkça Sorulan Sorular
                                </h3>
                            </div>
                        </div>
                    </div>
                    @if (TempData["Basarili"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close"></button>
                            @TempData["Basarili"].ToString()
                        </div>
                    }

                    @if (TempData["Hata"] != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @TempData["Hata"].ToString()

                        </div>
                    }


                    <!--begin::Form-->
                    <form asp-controller="AnahtarDeger" asp-action="SorularSayfasiDuzenle" asp-area="Admin" method="post">
                        <div class="m-form m-form--fit m-form--label-align-right">
                            <input type="hidden" asp-for="Sorular_REQ.AnahtarId" />
                            <div class="m-portlet__body">
                                <div class="form-group m-form__group row">
                                    <label class="text-left col-lg-12 col-sm-12">Dil :@Model.Dil </label>
                                </div>
                                <div class="form-group m-form__group row">
                                    <label class="text-left bold col-lg-12 col-sm-12">Kategori Adı</label>
                                    <div class="col-lg-12 col-md-12 col-sm-12">
                                        <textarea asp-for="Sorular_REQ.SorularIcerik" rows="10" cols="80">
                                            </textarea>
                                        <span asp-validation-for="Sorular_REQ.SorularIcerik"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="m-portlet__foot m-portlet__foot--fit">
                                <div class="m-form__actions m-form__actions">
                                    <div class="row">
                                        <div class="col-lg-12 ">
                                            <button type="submit" class="btn btn-info float-right">Kaydet</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                    <!--end::Form-->
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/lib/ckeditor/ckeditor.js"></script>
    <script>
        var dosyaAdi = "img/genel-resimler";
        $(function () {

            CKEDITOR.replace('Sorular_REQ.SorularIcerik', {
                customConfig: '/lib/ckeditor/config.js'
            });
        })
    </script>
}