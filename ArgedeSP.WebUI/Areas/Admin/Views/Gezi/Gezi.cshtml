<div class="m-subheader ">
    <div class="d-flex align-items-center">
        <div class="mr-auto">
            <h2 class="m-subheader__title ">Geziler</h2>
        </div>
    </div>
</div>
<div class="m-content">
    <div class="m-portlet__body">
        <div class="row">
            <div class="col-md-12">
                @if (TempData["Basarili"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close" style="padding-top:0px"></button>
                        @TempData["Basarili"].ToString()
                    </div>
                }

                @if (TempData["Hata"] != null)
                {
                    <div class="alert alert-danger" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close" style="padding-top:0px"></button>
                        @TempData["Hata"].ToString()

                    </div>
                }
            </div>
        </div>
        <!--begin: Datatable -->
        <table class="table table-striped table-bordered table-hover table-checkable overflow-auto" id="m_table_1">
            <thead>
                <tr>
                    <th>Gezi Id</th>
                    <th>Gezi Resmi</th>
                    <th>Gezi Adı</th>
                    <th>Keywords</th>
                    <th>Kısa Açıklama</th>
                    <th>Gezi Kategorisi</th>
                    <th>Dil</th>
                    <th>Durum</th>
                    <th>Oluşturma Tarihi</th>
                    <th>İşlem</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Gezi Id</th>
                    <th>Gezi Resmi</th>
                    <th>Gezi Adı</th>
                    <th>Keywords</th>

                    <th>Kısa Açıklama</th>
                    <th>Gezi Kategorisi</th>
                    <th>Dil</th>
                    <th>Durum</th>
                    <th>Oluşturma Tarihi</th>
                    <th>İşlem</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>

