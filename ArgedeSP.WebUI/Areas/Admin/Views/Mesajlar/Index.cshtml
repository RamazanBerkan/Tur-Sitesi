@model ArgedeSP.WebUI.Areas.Admin.Models.MesajlarViewModel
<div class="m-subheader ">
    <div class="d-flex align-items-center">
        <div class="mr-auto">
            <h3 class="m-subheader__title ">Mesajlar Listesi</h3>
        </div>
    </div>
</div>
<div class="m-content">
    <div class="m-portlet__body">
        <div class="row">
            <div class="col-md-12">
                @if (TempData["Basarili"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close" style="padding-top:0px"></button>
                        @TempData["Basarili"].ToString()
                    </div>
                }

                @if (TempData["Hata"] != null)
                {
                    <div class="alert alert-danger" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close" style="padding-top:0px"></button>
                        @TempData["Hata"].ToString()

                    </div>
                }
            </div>
        </div>
        <!--begin: Datatable -->
        <table class="table table-striped- table-bordered table-hover table-checkable" id="m_table_1">
            <thead>
                <tr>
                    <th>Ad</th>
                    <th>Soyad</th>
                    <th>Faks</th>
                    <th>E posta</th>
                    <th>Telefon</th>
                    <th>Firma</th>
                    <th>Mesaj</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th>@Model.IletisimForm_REQ.Ad</th>
                    <th>@Model.IletisimForm_REQ.Soyad</th>
                    <th>@Model.IletisimForm_REQ.Fax</th>
                    <th>@Model.IletisimForm_REQ.Email</th>
                    <th>@Model.IletisimForm_REQ.Telefon</th>
                    <th>@Model.IletisimForm_REQ.Sirket</th>
                    <th>@Model.IletisimForm_REQ.Mesajiniz</th>

                </tr>
            </tbody>
            <tfoot>
                <tr>
                    <th>Ad Soyad</th>
                    <th>E posta</th>
                    <th>Telefon</th>
                    <th>Konu</th>
                    <th>Mesaj</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>

@section styles{
    <link href="~/Admin/assets/vendors/custom/datatables/datatables.bundle.css" rel="stylesheet" />
}
@section scripts{
    <script src="~/Admin/assets/vendors/custom/datatables/datatables.bundle.js"></script>
    <script src="~/Admin/js/hizmet-table.js"></script>
}

