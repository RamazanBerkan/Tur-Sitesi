@model Giris_Req
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<!-- begin::Head -->
<head>
    <meta charset="utf-8" />
    <title>Admin Panel</title>
    <meta name="description" content="Latest updates and statistic charts">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no">
    <!--begin::Web font -->
    <script src="https://ajax.googleapis.com/ajax/libs/webfont/1.6.16/webfont.js"></script>
    <script>
        WebFont.load({
            google: { "families": ["Poppins:300,400,500,600,700", "Roboto:300,400,500,600,700"] },
            active: function () {
                sessionStorage.fonts = true;
            }
        });
    </script>
    <style>
        ::placeholder { /* Firefox, Chrome, Opera */
            color: white !important;
        }
    </style>
    <!--end::Web font -->
    <!--begin::Global Theme Styles -->
    <link href="~/Admin/assets/vendors/base/vendors.bundle.css" rel="stylesheet" type="text/css" />

    <!--RTL version:<link href="~/Admin/assets/vendors/base/vendors.bundle.rtl.css" rel="stylesheet" type="text/css" />-->
    <link href="~/Admin/assets/demo/demo12/base/style.bundle.css" rel="stylesheet" type="text/css" />
    <!--RTL version:<link href="~/Admin/assets/demo/default/base/style.bundle.rtl.css" rel="stylesheet" type="text/css" />-->
    <!--end::Global Theme Styles -->
    <link rel="shortcut icon" type="image/svg" href="~/images/icon.png"/>

</head>

<!-- end::Head -->
<!-- begin::Body -->
<body class="m--skin- m-header--fixed m-header--fixed-mobile m-aside-left--enabled m-aside-left--skin-dark m-aside-left--fixed m-aside-left--offcanvas m-footer--push m-aside--offcanvas-default">
    <!-- begin:: Page -->

    <div class="m-grid m-grid--hor m-grid--root m-page">
        <div class="m-grid__item m-grid__item--fluid m-grid m-grid--hor m-login m-login--signin m-login--2 m-login-2--skin-1" id="m_login" style="background: url(/images/homePage/maldivler.png)no-repeat center center fixed; -webkit-background-size: cover; -moz-background-size: cover; -o-background-size: cover; background-size: cover; ">
            <div class="m-grid__item m-grid__item--fluid m-login__wrapper">
                <div class="m-login__container">
                    <div class="m-login__logo">
                        <a href="#">
                            <img src="/images/homePage/travel.jpg" style="max-height:80px" />
                        </a>
                    </div>
                    <div class="m-login__signin" style="background-color: #0000009e; padding: 15px;">
                        <div class="m-login__head">
                            <h3 class="m-login__title">Giriş</h3>
                        </div>
                        @if (TempData["Basarili"] != null)
                        {
                            <div class="alert alert-success">@TempData["Basarili"].ToString()</div>
                        }
                        @if (TempData["Hata"] != null)
                        {
                            <div class="alert alert-danger">@TempData["Hata"].ToString()</div>
                        }

                        <form class="m-login__form m-form" asp-controller="Hesap" asp-action="Giris" method="post">
                            <div class="form-group m-form__group">
                                <input asp-for="KullaniciAdi" class="form-control m-input" type="text" placeholder="Kullanıcı Adı" autocomplete="off">
                                <span class="text-white" asp-validation-for="KullaniciAdi"></span>
                            </div>
                            <div class="form-group m-form__group">
                                <input asp-for="Sifre" class="form-control m-input m-login__form-input--last" type="password" placeholder="Şifre">
                                <span class="text-white" asp-validation-for="Sifre"></span>
                            </div>
                            <div class="row m-login__form-sub">
                                <div class="col m--align-left m-login__form-left">
                                    <label class="m-checkbox m-checkbox--light">
                                        <input type="checkbox" name="remember"> Beni Hatırla
                                        <span></span>
                                    </label>
                                </div>
                                <div class="col m--align-right m-login__form-right">
                                    <a href="javascript:;" id="m_login_forget_password" class="m-link">Şifrenizi mi unuttunuz ?</a>
                                </div>
                            </div>
                            <div class="m-login__form-action">
                                <button id="m_login_signin_submit" class="btn btn-focus m-btn m-btn--pill m-btn--custom m-login__btn m-login__btn--primary">Giriş</button>
                            </div>
                        </form>
                    </div>
                    <div class="m-login__forget-password" style="background-color: #0000005c; padding:15px">
                        <div class="m-login__head">
                            <h3 class="m-login__title">Şifremi Unuttum</h3>
                            <div class="m-login__desc" style="color:white">Lütfen kayıtlı e-mail adresinizi giriniz</div>
                        </div>
                        <form class="m-login__form m-form" asp-controller="Hesap" asp-action="SifremiUnuttum" method="post" asp-area="Admin">
                            <div class="form-group m-form__group">
                                <input class="form-control m-input" name="email" type="text" placeholder="E-mail" autocomplete="off" style="color:white">
                            </div>
                            <div class="m-login__form-action">
                                <button id="m_login_forget_password_submit" type="submit" class="btn m-btn m-btn--pill m-btn--custom m-btn--air m-login__btn m-login__btn--primary">Gönder</button>&nbsp;&nbsp;
                                <button id="m_login_forget_password_cancel" style="color:white" type="button" class="btn m-btn m-btn--pill m-btn--custom m-btn--air m-login__btn">Vazgeç</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- end:: Page -->
    <!--begin::Global Theme Bundle -->
    <script src="~/Admin/assets/vendors/base/vendors.bundle.js" type="text/javascript"></script>
    <script src="~/Admin/assets/demo/demo12/base/scripts.bundle.js" type="text/javascript"></script>
    <script src="~/Admin/assets/snippets/custom/pages/user/login.js" type="text/javascript"></script>
    <!--end::Global Theme Bundle -->
    <!--begin::Page Scripts -->
    <!--end::Page Scripts -->
</body>
<!-- end::Body -->
</html>