<div class="m-subheader ">
    <div class="d-flex align-items-center">
        <div class="mr-auto">
            <h2 class="m-subheader__title " style="color:#f5a61f;">Bloglar</h2>
        </div>
    </div>
</div>
<div class="m-content">
    <div class="m-portlet__body">
        <div class="row">
            <div class="col-md-12">
                @if (TempData["Basarili"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close" style="padding-top:0px"></button>
                        @TempData["Basarili"].ToString()
                    </div>
                }

                @if (TempData["Hata"] != null)
                {
                    <div class="alert alert-danger" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close" style="padding-top:0px"></button>
                        @TempData["Hata"].ToString()

                    </div>
                }
            </div>
        </div>
        <!--begin: Datatable -->
        <table class="table table-striped table-bordered table-hover table-checkable" id="m_table_1">
            <thead>
                <tr>
                    <th>Blog Id</th>
                    <th>Blog Adı</th>
                    <th>Blog Resmi</th>
                    @*<th>Blog ArkaPlanResmi</th>*@
                    <th>Kısa Açıklama</th>
                    @*<th>Seo Url</th>*@
                    @*<th>Blog Etiket</th>*@
                    <th>Dil</th>
                    <th>Blog Kategorisi</th>
                    <th>İşlem</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Blog Id</th>
                    <th>Blog Adı</th>
                    <th>Blog Resmi</th>
                    @*<th>Blog ArkaPlanResmi</th>*@
                    <th>Kısa Açıklama</th>
                    @*<th>Seo Url</th>*@
                    @*<th>Blog Etiket</th>*@
                    <th>Dil</th>
                    <th>Blog Kategorisi</th>
                    <th>İşlem</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>

@section styles{
    <link href="~/Admin/assets/vendors/custom/datatables/datatables.bundle.css" rel="stylesheet" />
}
@section scripts{
    <script src="~/Admin/assets/vendors/custom/datatables/datatables.bundle.js"></script>
    <script src="~/Admin/js/blog-table.js"></script>
}

